<p>
  <b>Title:</b>
  <%=h @article.title %>
</p>

<p>
  <b>Body:</b>
  <%=h @article.body %>
</p>

<p>
  <b>Author:</b>
  <%=h @article.user %>
</p>


<table>
    <tr>
        <th>Comment</th>
        <th>Author</th>
        <th>Date</th>
        <th></th>
    </tr>
    <% @article.comments.each do |comment| %>
        <tr>
            <td><%=h comment.body %></td>
            <td><%=h comment.user_id %></td>
            <td><%=h comment.updated_at %></td>
            <td><%= link_to "Edit", edit_article_comment_path(comment.article, comment) %></td>
        </tr>
    <% end %>
</table>


<%= link_to 'Edit Article', edit_article_path(@article) %> |
<%= link_to 'Create New Comment', new_article_comment_path(@article) %> |
<%= link_to 'Back', article_path %>
